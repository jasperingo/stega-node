<%- include('partials/header'); -%>

<form action="" method="POST" enctype="multipart/form-data">
  <div class="mb-4">
    <label class="form-label fw-bold" for="image-input">Image to get message from</label>
    <input type="file" name="image" id="image-input" accept="image/png, image/jpg" class="form-control" required />
  </div>

  <div class="mb-4">
    <label class="form-label fw-bold" for="key-input">Secret key</label>
    <input type="text" name="key" id="key-input" class="form-control" minlength="32" maxlength="32" required />
  </div>

  <button class="btn btn-primary w-100 my-4">Submit</button>
</form>

<%- include('partials/footer'); -%>
